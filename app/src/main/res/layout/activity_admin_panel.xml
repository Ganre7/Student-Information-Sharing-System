<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdiss.knd.sdiss.AdminPanel">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/writeposts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/uploadnotes"
            android:layout_alignEnd="@+id/uploadnotes"
            android:layout_alignStart="@+id/uploadnotes"
            android:layout_marginBottom="72dp"
            android:text="Write Posts" />

        <Button
            android:id="@+id/uploadnotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/uploadtimetable"
            android:layout_alignStart="@+id/uploadtimetable"
            android:layout_centerVertical="true"
            android:text="Upload notes" />

        <Button
            android:id="@+id/uploadtimetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="105dp"
            android:text="Upload Timetable" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
